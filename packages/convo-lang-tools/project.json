{
    "name": "convo-lang-tools",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/convo-lang-tools/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@iyio/nx-common:lib-builder",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/convo-lang-tools",
                "main": "packages/convo-lang-tools/src/index.ts",
                "tsConfig": "packages/convo-lang-tools/tsconfig.lib.json",
                "assets": ["packages/convo-lang-tools/*.md"]
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs convo-lang-tools {args.ver} {args.tag}"
            },
            "dependsOn": ["build"]
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/convo-lang-tools/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/convo-lang-tools/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "test-ext": {
            "executor": "nx:run-commands",
            "options": {
                "command": "code --extensionDevelopmentPath=$(pwd)/packages/convo-lang-tools/ --disable-extensions packages/convo-lang-tools/examples"
            }
        },
        "publish-ext": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "packages/convo-lang-tools",
                "command": "./publish.sh"
            }
        }
    },
    "tags": []
}
