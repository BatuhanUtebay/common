{
    "fileTypes": [
        "js",
        "jsx",
        "ts",
        "tsx"
    ],
    "injectionSelector": "L:source -comment -string",
    "scopeName": "convo-js",
    "patterns": [
        {
            "begin": "/\\*convo\\*/\\s*`",
            "beginCaptures": {
                "0":{
                    "name": "support.type"
                }
            },
            "end": "`",
            "endCaptures":{
                "0":{
                    "name": "support.type"
                }
            },
            "patterns": [
                {
                    "include": "source.ts#template-substitution-element"
                },
                {
                    "include": "source.convo"
                }
            ]
        },
        {
            "begin": "(convo\\w*)\\s*(/\\*.*\\*/\\s*)?(`)",
            "beginCaptures": {
                "1":{
                    "name": "support.type"
                },
                "2":{
                    "name":"comment"
                }
            },
            "end": "`",
            "endCaptures":{
                "0":{
                    "name": "support.type"
                }
            },
            "patterns": [
                {
                    "include": "source.ts#template-substitution-element"
                },
                {
                    "include": "source.convo"
                }
            ]
        },
        {
            "include": "source.ts#template-substitution-element"
        }
    ]

}
