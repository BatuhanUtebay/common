{
    "name": "react-common",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/react-common/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/web:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/react-common",
                "tsConfig": "packages/react-common/tsconfig.lib.json",
                "project": "packages/react-common/package.json",
                "entryFile": "packages/react-common/src/index.ts",
                "external": ["react/jsx-runtime"],
                "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
                "compiler": "babel",
                "assets": [
                    {
                        "glob": "packages/react-common/README.md",
                        "input": ".",
                        "output": "."
                    }
                ]
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs react-common {args.ver} {args.tag}"
            },
            "dependsOn": [
                {
                    "projects": "self",
                    "target": "build"
                }
            ]
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/react-common/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["coverage/packages/react-common"],
            "options": {
                "jestConfig": "packages/react-common/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "storybook": {
            "executor": "@nrwl/storybook:storybook",
            "options": {
                "uiFramework": "@storybook/react",
                "port": 4400,
                "config": {
                    "configFolder": "packages/react-common/.storybook"
                }
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        },
        "build-storybook": {
            "executor": "@nrwl/storybook:build",
            "outputs": ["{options.outputPath}"],
            "options": {
                "uiFramework": "@storybook/react",
                "outputPath": "dist/storybook/react-common",
                "config": {
                    "configFolder": "packages/react-common/.storybook"
                }
            },
            "configurations": {
                "ci": {
                    "quiet": true
                }
            }
        }
    },
    "tags": ["browser"]
}
