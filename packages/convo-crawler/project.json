{
    "name": "convo-crawler",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/convo-crawler/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@iyio/nx-common:lib-builder",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/convo-crawler",
                "main": "packages/convo-crawler/src/index.ts",
                "tsConfig": "packages/convo-crawler/tsconfig.lib.json",
                "assets": ["packages/convo-crawler/*.md"]
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "node tools/scripts/publish.mjs convo-crawler {args.ver} {args.tag}"
            },
            "dependsOn": ["build"]
        },
        "run": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npx ts-node -r tsconfig-paths/register --project packages/convo-crawler/tsconfig.lib.json packages/convo-crawler/src/bin/craw.ts $@"
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/convo-crawler/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/convo-crawler/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
